<configs>
	<!--  This tells SDX to add to the blocks.xml -->
	<config name="blocks">	
		<!-- This tells SDX to add the following block to the bottom of the block list -->

<insertAfter xpath="/blocks/block[@name='commercialDoor2_v3']">		
			<block id="1171" name="Sandbags2">
				<property name="Material" value="sand" />
				<property name="Shape" value="ModelEntity" />
				<property name="Model" value="#sandbags?Sandbags2" />
				<property name="CustomIcon" value="ui_game_symbol_cubetest" />

				<!-- ony needed if you want to enable picking up the block -->
				<property name="CanPickup" value="true" />
				<!-- used to fine tune block position in game if needed -->
				<property name="ModelOffset" value="0,0,0" />
				<!-- only needed only if the block's dimensions exceeds 1Mx1Mx1M -->
				<property name="MultiBlockDim" value="2,1,1" />
				<property name="Collide" value="movement,melee,bullet,arrow,rocket" />
				<property name="DescriptionKey" value="cubetest" />
				<drop event="Destroy" count="0" />
				<drop event="Destroy" name="crushedSand" count="20" prob="1" />
				<drop event="Fall" name="crushedSand" count="0" prob="1" stick_chance="1" />
				<drop event="Fall" name="crushedSand" count="1" prob=".75" stick_chance="1" />
			</block>
			<block id="1170" name="Sandbags1">
				<property name="Material" value="sand" />
				<property name="Shape" value="ModelEntity" />
				<property name="Model" value="#sandbags?Sandbags1" />
				<property name="CustomIcon" value="ui_game_symbol_cubetest" />

				<!-- ony needed if you want to enable picking up the block -->
				<property name="CanPickup" value="true" />
				<!-- used to fine tune block position in game if needed -->
				<property name="ModelOffset" value="0,0,0" />
				<!-- only needed only if the block's dimensions exceeds 1Mx1Mx1M -->
				<property name="MultiBlockDim" value="2,1,1" />
				<property name="Collide" value="movement,melee,bullet,arrow,rocket" />
				<property name="DescriptionKey" value="cubetest" />
				<drop event="Destroy" count="0" />
				<drop event="Destroy" name="crushedSand" count="10" prob="1" />
				<drop event="Fall" name="crushedSand" count="0" prob="1" stick_chance="1" />
				<drop event="Fall" name="crushedSand" count="1" prob=".75" stick_chance="1" />
			</block>
</insertAfter>				
	<append xpath="/blocks">
		</append>
	</config>
</configs>